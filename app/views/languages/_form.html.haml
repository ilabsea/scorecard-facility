.w-50.view-center
  = simple_form_for(@language) do |f|
    = f.error_notification
    = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

    .form-inputs
      .mb-3= f.input :code, label: t('shared.code')
      .mb-3= f.input :name, label: t('shared.name')

    .form-actions
      = link_to t('shared.cancel'), languages_path, class: 'btn btn-secondary me-1'
      = f.submit t('shared.save'), class: 'btn btn-primary'
