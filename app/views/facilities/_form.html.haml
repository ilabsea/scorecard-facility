.w-50.view-center
  = simple_form_for @facility do |f|
    .mb-3= f.input :name_en, label: t('facility.name_en')
    .mb-3= f.input :name_km, label: t('facility.name_km')
    .mb-3= f.input :abbr_en, label: t('facility.abbr_en')
    .mb-3= f.input :abbr_km, label: t('facility.abbr_km')

    .mb-3.form-group
      %label= t('facility.parent')
      = f.select :parent_id, Facility.roots.pluck(:"name_#{I18n.locale}", :id), {:include_blank => true}, {class: 'form-select'}

    .actions
      = link_to t('shared.cancel'), facilities_path, class: 'btn btn-secondary me-1'
      = f.submit t('shared.save'), class: 'btn btn-primary'
